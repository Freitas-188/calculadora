
#include <stdio.h>
#include <stdlib.h>

int main() {

    char operacao;
    float num1, num2, resultado;


    printf("escolha uma operacao +,  -,  / ou  :");
    scanf("%c", &operacao );

    printf("digite um numero:");
    scanf("%f", &num1);

    printf("digite outro numero:");
    scanf("%f", &num2);

    if (operacao == '+')
        {
        printf("somando...\n");
        resultado = num1 + num2;
        printf("o resultado eh: %.2f", resultado);
        }
    else
    {

    if (operacao == '-')
        {
        printf("subtraindo...\n");
        resultado = num1 - num2;
        printf("o resultado eh: %.2f", resultado);
        }


    else
      {

    if (operacao == '/')
    {
        printf("dividindo...\n");
        resultado = num1 / num2;
        printf("o resultado eh: %.2f", resultado);

    }

    else
      {

    if (operacao == '*')
    {
        printf("multiplicando...\n");
        resultado = num1 * num2;
        printf("o resultado eh: %.2f", resultado);
    }


   }
  } 
}

    return 0;

}
